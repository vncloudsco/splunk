/*************************************************************************************************/
/*  GDI: DATA INPUTS                                                                             */
/*************************************************************************************************/
.spl-gdi-wrapper {
    position: relative;
    height: auto;
    width: 660px;
    margin: 30px auto 20px auto;
    padding-top: 15px;
    box-sizing: border-box;
    background: $white;
    border-radius: 2px;
    @mixin create-card;

    .jmFormActions-btn-left {
        text-align: left;

        .splButton-primary {
            float: left !important;
        }
    }
    .jmFormActions .splButton-secondary span {
        min-width: 80px;
    }
    div.spl-clear-fix {
        clear: both;
        height: 1px;
        margin-top: -1px;
        overflow: hidden;
        font-size: 1%;
    }
    * {
        line-height: 1;

        p {
            font-size: inherit;
            color: #111;
            padding: 0;
            margin: 0;
        }
    }
    h2.spl-page-hdr {
        margin-top: 0;
        margin-bottom: $spacingQuarter;
        font-size: 18px;
        font-weight: bold;
        position: relative;
        padding: 0px $spacingHalf;

        a.spl-help-link {
            position: absolute;
            right: 0;
            top: 0;
            display: inline-block;
            height: 16px;
            line-height: $lineHeight;
            padding-left: $spacing;
            white-space: nowrap;
            font-size: $fontSize;
            text-align: right;
            font-weight: bold;
        }
    }
    .spl-col-floating-link-left {
        font-size: $fontSize;
        margin-left: $spacingHalf;

        span {
            margin-top: $spacing;
            margin-bottom: $spacingHalf;
            display: inline-block;
        }
        .spl-icon-external-link-sm {
            padding-right: 2px;
        }
    }
}
.icon-external {
    padding-left: 4px;
    padding-right: 4px;
}


/*************************************************************************************************/
/*  GDI: THREE COLUMNS                                                                           */
/*************************************************************************************************/
.spl-gdi-wrapper {
    .spl-three-col-wrapper-inner {
        padding: 0 10px;
        margin-top: 5px;
    }
    .spl-three-col-wrapper {
        float: left;
        width: 100%;
        padding: 0;

        .spl-left-col,
        .spl-mid-col,
        .spl-right-col {
            display: inline;
            float: left;
            width: 30%;
        }
        .spl-mid-col {
            margin: 0px 15px;
        }
    }
    .spl-col-border-left {
        border-left: 1px dotted $borderColor;
    }
    .spl-col-border-right {
        border-right: 1px dotted $borderColor;
    }
    ul.spl-data-options-links {
        min-height: 70px;
        list-style: none;
        margin: 0;
        padding: 0;

        li {
            padding: 4px 0;

            p {
                font-size: $fontSizeSmall !important;
                color: $textGrayDark !important;
                padding: 0;
                margin: 3px 10px 10px 0;
            }
            a {
                font-size: $fontSize;
            }
        }
    }
    ul.spl-data-options-links-strong li a {
        font-weight: bold !important;
    }
    h3.spl-tan-section-head {
        padding: $spacingHalf;
        clear: both;
        border-bottom: 1px solid $borderColor;
        box-sizing: border-box;
        color: #111;
        font-size: 13px;
        font-weight: normal;
    }
    h3.spl-tan-section-head-top {
        margin-top: $spacing;
    }
    .spl-data-options-links {
        li.spl-icon-local-event-log-sm,
        li.spl-icon-remote-event-log-sm,
        li.spl-icon-files-dirs-log-sm,
        li.spl-icon-wmi-collections-sm,
        li.spl-icon-tcp-sm,
        li.spl-icon-udp-sm,
        li.spl-icon-registry-monitoring-sm,
        li.spl-icon-active-dir-monitoring-sm,
        li.spl-icon-scripts-sm {
            padding: 2px 0px 10px 20px!important;
        }
    }
}
.adminContent .spl-gdi-wrapper h3.add-data-header {
    font-weight: bold;
}


/*************************************************************************************************/
/*  GDI: RECIPE PAGE                                                                             */
/*************************************************************************************************/
.spl-gdi-wrapper {
    .spl-recipes-wrapper {
        position: relative;
        display: block;
    }
    ul.spl-recipes-list {
        list-style: none;
        margin: 0;
        padding: 0;

        li.spl-recipe-list-item {
            padding: 0 10px 15px 45px;
            margin-bottom: 15px;
            border-bottom: 1px dotted $borderColor;
        }
        li.spl-recipe-last {
            border-bottom: 0px dotted $borderColor !important;
        }
        li p.spl-recipe-description {
            margin: 0 0 10px 0;
            color: $textGrayDark;
            font-size: $fontSizeSmall;
            line-height: 15px;
        }
        li span.spl-recipe-action {
            display: inline-block;
            height: 16px;

            a.spl-action-link {
                display: block;
                background-position: 0 0;
                font-size: $fontSize;
                line-height: $lineHeight;
                padding: 0 0 0 20px;
            }
        }
        li h3.spl-recipe-hdr {
            font-size: 14px;
            font-weight: 300;
            color: #111;
            margin-bottom: 3px;
        }
    }
    p.spl-main-description a.spl-inline-link,
    .spl-recipes-wrapper ul.spl-recipes-list li p.spl-recipe-description a.spl-inline-link {
        background-position: 0 0px;
        margin-left: 3px;
        padding-left: 15px;
        font-size: $fontSizeSmall;
        line-height: 13px;
    }
    h3.spl-main-description-hdr {
        font-size: $fontSizeLarge;
        font-weight: 300;
        color: $brandColor;
        position: relative;
        margin: 5px 0 10px 0;
    }
    p.spl-main-description {
        font-size: $fontSize;
        font-weight: 300;
        line-height: 140%;
        padding-bottom: 0px;
        margin-top: 0;
        text-align: justify;
        > .spl-icon-external-link-xsm {
            line-height: $lineHeight;
            vertical-align: baseline;
        }
    }
}


/*************************************************************************************************/
/*  GDI: START SUCCESS PAGE                                                                      */
/*************************************************************************************************/
.spl-success-message-page {
    text-align: center;
}
.spl-gdi-success-layout-wrapper {
    position: relative;
    text-align: center;
    margin-top: 10px;
}
.spl-gdi-wrapper {
    span.spl-success-message-wrapper {
        display: inline-block;
        padding: 40px 40px 30px 40px;
    }
    .spl-success-message-wrapper-inner {
        position: relative;
        text-align: center;
    }
    span.spl-success-message-content {
        position: relative;
        display: inline-block;
        text-align: left;
        padding-left: 60px;
        background-position: 0 0;
    }
    h1.spl-success-message {
        box-sizing: border-box;
        padding: 0;
        margin: 0 0 5px 0;
        font-size: 24px;
        font-weight: 300;
        text-align: left;
        letter-spacing: -0.3pt;
        white-space: normal;
    }
    span.spl-success-sub-message,
    span.spl-success-sub-message span.spl-success-sub-message-inner {
        display: inline-block;
        position: relative;
        box-sizing: border-box;
    }
    span.spl-success-sub-message {
        text-align: left;
        border-radius: $interactiveBorderRadius;

        span.spl-success-sub-message-inner {
            text-align: center;
            background-color: $warningColorL50;
            padding: 5px 10px;
        }
    }
    .spl-success-actions-wrapper {
        position: relative;
        display: block;
        margin: 20px auto 0 auto;
    }
    .spl-success-actions-wrapper-inner {
        padding: 0;
        text-align: left;
    }
    .spl-success-actions-list {
        margin: 0;
    }
    .spl-success-actions-item {
        border-bottom: 1px dotted $borderColor;
        display: block;
    }
    .spl-success-actions-item-last {
        border: 0 solid;
    }
    .spl-success-actions-link {
        display: block;
        height: 48px;
        font-size: $fontSizeLarge;
        line-height: 48px;
        padding-left: 45px;
        background-position: 0 50%;
    }
}


/*************************************************************************************************/
