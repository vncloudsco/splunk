/*************************************************************************************************/
/*  ACCUMULATOR STYLES                                                                           */
/*************************************************************************************************/
.accumulator {
    fieldset {
        margin:0;
    }
    select.hiddenSelectedOptions {
        display:none;
    }
    .availableOptionsContainer, .selectedOptionsContainer {
        float: left;
        width: 370px;
        margin: 0px 20px 0px 0px;
    }
    .addAllLink, .removeAllLink {
        float:right;
    }
    .selectedOptionsContainer {
        margin-right: 0px;
    }
    h4 {
        font-weight:normal;
        font-size: $fontSize;
        width:200px;
        margin-right:22px;
        padding-bottom:5px;
        &.selectedOptionsHeader {
            width: 200px;
            margin-right:0px;
        }
    }
    ul {
        &.availableOptions, &.selectedOptions {
            border-radius: $borderRadius;
            height:200px;
            overflow: auto;
            /*width:318px;
            float: left;*/
            list-style: none none;
            margin: 0;
            padding:0;
            border: 1px solid $borderColor;
            clear: left;
            li {
                clear: left;
                padding: 6px;
                font-size: $fontSize;
                cursor: pointer;
                &:hover {
                    background-color: #e5f2f5;
                }
                span {
                    margin: -2px 6px 0 0;
                    display: block;
                    float: left;
                    height: 17px;
                    width: 17px;
                    border-radius: $borderRadius;
                }
                &.selected {
                    color: $textGray;
                    span.splIcon {
                        background-color: $gray80;
                        &:before {
                            color: $textColor;
                        }
                    }
                }
            }
        }
        span.splIcon-arrow-e, span.splIcon-arrow-w {
            background-image: none;
            &:before {
                padding: 0 4px;
                line-height: 18px;
                font-family: 'Splunk Icons';
                color: $white;
            }
        }
        span.splIcon-arrow-e {
            background-color: $brandColor;
            &:before {
                content: "\27A1";
            }
        }
        span.splIcon-arrow-w {
            background-image: none;
            &:before {
                content: "\EC00";
            }
        }
    }
    &#item-capabilities {
        ul.availableOptions, ul.selectedOptions {
            height: 450px;
        }
    }
}
.accDisabled {
    ul {
        &.availableOptions, &.selectedOptions {
            background-color: #f0f0f0;
        }
        li {
            color: $textGray;
            span.splIcon {
                background-color:$gray80;
            }
        }
    }
}

.radioWidget ul {
    list-style: none none;
    margin: 0;
    padding: 0;
}


/*************************************************************************************************/
/*  FIELD MAPPING                                                                                */
/*************************************************************************************************/
.fieldmapping, .repeatable div.widget, .repeatabletemplate {
    padding-bottom: 0;

    + .addField, + .addnew {
        margin-top: 0;
        a {
            padding: $buttonPadding;
            margin-top: $spacingQuarter;
            border: $border;
            border-radius: $interactiveBorderRadius;
            box-sizing: border-box;
            display: inline-block;
            @mixin interactive;
            @mixin button-states;

            &:before {
                padding: 0 4px 0 0;
                line-height: 18px;
                font-family: 'Splunk Icons';
                content: '+';
                display: inline-block;
            }
        }
    }
}
.fieldmapping input {
    width: 150px;
}
.fieldmapping input.right,
.repeatable .widgeterror {
    + .delete {
        display: inline-block;
        @mixin button-padding calc($buttonPaddingVertical + 1px); /*  note the vertical padding will be funky unless it's block, inline-block, or floated */
        margin-left: $spacingQuarter;
        max-width: calc($deleteButtonWidth - $spacing);
        line-height: $lineHeight;
        border-radius: $interactiveBorderRadius;

        @mixin interactive none, transparent, none, $pillTextColor;
        @mixin button-states pill-hover, pill-active, pill-style $textDisabledColor, pill-style $linkColor;
    }
}

/*************************************************************************************************/
/*  DATA INPUTS                                                                                  */
/*************************************************************************************************/
table#dataInputs, table#forwarded-dataInputs {
    td {
        border-bottom: 0;
        &.input_description {
            border-bottom: $tableBorder;
