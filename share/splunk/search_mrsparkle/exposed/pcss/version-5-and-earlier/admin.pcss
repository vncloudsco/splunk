/* Styles for the admin container and list views
 *
 *    This file only included for the admin section when wrapped in full admin skin.  See adminforms.css for
 *    styles specific to form elements themselves (which would be included when wrapped in the admin skin or in popups).
 */

/* body */
body.splView-_admin {
    background: $bodyBackgroundColor;
}

.navigationHeader {
    background-color: transparent;
}

.ManagerPageTitle {
    font-weight: $fontWeightSemiBold;
}

.ManagerBar {
    #managerContextSwitcherActivator{
        padding-right: 15px;
        position: relative;
    }
    .splIcon-triangle-3-s {
        position:absolute;
        top: 9px;
        right: 10px;
        background-position: -26px -327px;
        width: 7px;
    }
    > .ManagerPageTitle:only-child {
        margin-bottom: 0;
    }
}


/*************************************************************************************************/
/*  ABOUT DIALOG                                                                                 */
/*************************************************************************************************/
.aboutPopupContainer {
    display:none;
    padding: $spacingHalf;

    .aboutPopupSplunkLogo {
        background: transparent url(/static/img/skins/default/logo_splunkServer_white_low.png) no-repeat scroll 0 0;
        height: 45px;
        width: 120px;
    }
}

/*************************************************************************************************/
/*  CONTENT                                                                                      */
/*************************************************************************************************/
.adminContent {
    clear: both;
    min-height: 400px;

    table.splTable {
        background-color: $white;

        th {
            border-bottom: none;
            font-weight: $fontWeight;
            background-color: $tableHeaderBackground;
            border-right: $borderWhite;
            position: relative;
            &:last-child {
                border-right: none;
            }
            a:hover {
                color: $linkColor;
            }
            &:empty {
                padding: 16px;
            }
        }
        tr:last-child {
            td, td.inout_description {
                border-bottom: 0;
            }
        }
        .col-share, .col-status, .col-actions {
            white-space: nowrap;
        }
    }
}


/*************************************************************************************************/
/*  INDEX PAGE                                                                                   */
/*************************************************************************************************/
div.adminIndex {
    overflow: hidden;
    font-size: $fontSize;
    padding: $spacingHalf;
    margin: auto;
    max-width: $bodyMinWidth;

    div.adminSections {
        overflow:hidden;
        clear:left;
    }
    div.adminIndexLeft, div.adminIndexRight {
        float:left;
        width:50%;
        padding:$spacingHalf;
        margin:0;
        box-sizing: border-box;
    }
    div.adminGroup {
        padding: 0px;
        margin-bottom: $spacing;
        position: relative;
        @mixin create-card;
    }
    h2 {
        @mixin create-heading-large;
        background: none !important;
        padding: 0;
    }
    div.lastCell {
        border: none;
    }
    h1 {
        margin: $spacingHalf 0px $spacingHalf $spacingHalf;
        font-weight: bold;
        font-size: 21px;
        letter-spacing: -0.5pt;
    }
    p {
        margin-top: $spacing;
        padding: 0px 10px;
    }
    dl {
        padding: 0;
        margin: 0;
    }
    div.adminListItem {
        padding: $spacing;
        background: none;
        border-bottom: $borderLight;
        &:last-child {
            border-bottom: none;
        }
    }
    .adminListIcon {
        display: block;
        height: 36px;
        width: 36px;
        margin-right: $spacingHalf;
        margin-left: $spacingHalf;
        float: left;
        background-size: 36px;
    }
    dl {
        dt {
            margin: 0 0 $spacingQuarter 0;
            font-weight: normal;
            font-size: $fontSizeLarge;

            a {
                font-size: $fontSizeLarge;
                white-space: nowrap;
            }
            span a {
                font-size: $fontSizeSmall;
            }
        }
        dd {
            margin: 0;
            color:$textGrayDark;
        }
    }
}

/* SPL-55408 - for IE*/
#adminIndexRadios {
    .authCheckbox {
        border: none;
    }
    input[type='checkbox']{
        padding: 5px 7px 5px 7px;
    }
}


/*************************************************************************************************/
/*  SERVER RESTART                                                                               */
/*************************************************************************************************/
#restarterr { color: red; font-weight: bold; display: none; }
#restartstatus, #restartsslwarn {
    display: none;
    position: fixed;
    top: 45px;
    left: 50%;
    z-index: 900; /*place behind the disconnect message */
    width: 400px;
    margin-left: -220px;
    background-color: $white;
    border-radius: $borderRadius;
    box-shadow: 0 3px 7px rgba(0, 0, 0, 0.3);
    color: $gray30;
    padding: $spacing;
    text-align: center;

    h1 {
        font-size: $fontSizeLarge;
        font-weight: normal;
        color: $gray30;
    }
}
#restartsslwarn {
    top: 35px;
    z-index: 1100; /*place over the disconnect message */
    width: 400px;
    height: 150px;
    margin-left: -270px;
    padding: $spacing 70px;
}
#restartstatus .sslwarn {
    display: none;
}


/*************************************************************************************************/
/*  SERVER CONTROLS                                                                              */
/*************************************************************************************************/
.serverControlsWrapper {
    display: flex;
    justify-content: center;
    min-height: auto !important;
    min-width: $bodyMinWidth;

    .fieldsetWrapper {
        @mixin create-card;
        flex: 1;
        padding: $spacing !important;
        margin: $spacingHalf;

        h1 {
            margin-top: 0;
        }
        .splButton-primary {
            padding: $buttonPaddingVerticalLarge calc($buttonPaddingSides * 2);
        }
    }
}


/*************************************************************************************************/
/*  LOADING MESSAGE                                                                              */
/*************************************************************************************************/
.editFormWrapper .splOverlay-white {
    position:absolute;
}


/*************************************************************************************************/
/*  EDIT PAGES                                                                                   */
/*************************************************************************************************/
div.editFormWrapper {
    padding:0px;
    position:relative;
    margin-top: $spacingHalf;
    border-top: $borderLight;
}


/*************************************************************************************************/
/*  DATA INPUTS                                                                                  */
/*************************************************************************************************/
div.dataInputsWrapper, div.pageContentWrapper {
    padding: 20px;
    border-top: $borderLight;
    min-height: 420px;
}

div.dataInputsWrapper .dataInputsDesc, div.pageContentWrapper .pageContentDesc {
    display: block;
    font-size: $fontSize;
    margin-top: 5px;
    margin-bottom: 15px;
}

div.dataInputsWrapper {
    .fieldsetWrapper.first {
        padding-bottom: 15px;
        padding-top: 0px;
    }
    table p.input_description {
        font-style: italic;
        margin: 0px;
        font-size: $fontSizeSmall;
        font-weight: normal;
        padding-top: 5px;
    }
    .listWrapper {
        padding: 0;
    }
    > .fieldsetWrapper:first-child {
        padding-top: 0;
    }
    h2 {
        font-size: $fontSizeXLarge;
        font-weight: bold;
        color: $textGrayDark;
    }
}

/*************************************************************************************************/
/*  SETTINGS INDEX                                                                               */
/*************************************************************************************************/
div.dataInputsWrapper.settingsIndex, .settingsIndex {
    padding: 0 $spacing $spacing;
    border-top: none;

    &.noSettingsIndexDesc {
        margin-top: 0;
    }
    .splTable {
        width: calc($bodyMinWidth - $spacing);
        margin: auto auto $spacingDouble auto;
        box-sizing: border-box;
        @mixin create-card-table;

        &:not(.show-table-header) th {
            display: none;
        }
        td {
            padding: $spacingThreeQuarters $spacingHalf;
            &.actions {
                text-align: right;

                a {
                    @mixin button-padding calc($buttonPaddingVertical + 4px); /*  note the vertical padding will be funky unless it's block, inline-block, or floated */
                    line-height: $lineHeight;
                    border-radius: $interactiveBorderRadius;

                    @mixin interactive none, transparent, none, $pillTextColor;
                    @mixin button-states pill-hover, pill-active, pill-style $textDisabledColor, pill-style $linkColor;

                    &.add-new:before {
                        padding: 0 4px 0 0;
                        line-height: 18px;
                        font-family: 'Splunk Icons';
                        content: '+';
                        display: inline-block;
                    }
                }
            }
            a {
                border-radius: $borderRadius;
                &:focus {
                    @mixin focus-element;
                }
            }
            &.input_name {
                vertical-align: top !important;
            }
        }
        &#dataInputs, &#forwarded-dataInputs {
            &.show-table-header th {
                padding: $spacingHalf $spacing;
                font-weight: $fontWeightSemiBold;

                &.actions {
                    text-align: right;
                }
            }
            td {
                &.input_name, &.actions, &.input_count {
                    border-top: $borderLight;
                }
                &.input_description {
                    padding: 0 $spacing;
                    position: relative;
                    top: -$spacingThreeQuarters;
                    border-bottom: 0;
                    pointer-events: none;
                }
                &.input_count {
                    padding: $spacingThreeQuarters $spacing 0;
                }
            }
            tr:first-child td, tr:nth-child(2) td {
                &.input_name, &.actions, &.col-2 {
                    border-top: 0;
                }
            }
        }
        a {
            padding: $spacingHalf;
        }
    }
    .settingsIndexDesc {
        border-bottom: $borderLight;
        margin: -$spacingHalf -$spacing $spacing;
        padding: 0 $spacing $spacing;
    }
    .Message + & {
        padding-top: $spacing;

        .settingsIndexDesc {
            margin-top: 0;
        }
    }
    h2 {
        @mixin create-heading-large;
    }
    h2, .dataInputsDesc {
        width: $bodyMinWidth;
        margin: auto auto $spacingHalf auto;
    }
}

/*************************************************************************************************/
/*  LISTING PAGE                                                                                 */
/*************************************************************************************************/
.adminContentList {
    h2 {
        font-weight: $fontWeightSemiBold;
        font-size: 24px;
        margin: 10px 0;
        margin-top: 5px;
    }
    h3 {
        font-size: 14px;
        font-weight: 700;
        margin: 30px 0 0;
    }
    div.listWrapper {
        table.splTable {
            td {
                border-bottom: none;
                .bolt {
                    padding-top: 8px;
                }
            }
            tr {
                &:nth-child(odd) {
                    background-color: $tableRowAccentColor;
                }
                &:hover {
                    background-color: $tableRowHoverColor;
                }
            }
        }
    }
    .eaiPagination {
        .actionButtons {
            position: absolute;
            top: calc($navbarHeight + 6);
            right: 15px;
            transition: top $transitionTime;
            .splButton-primary, .splButton-secondary {
                min-width: 80px;
                display: inline-block;
                margin-left: $spacingQuarter;
            }
            .open & {
                right: -$sideNavWidth;
                transition: right $transitionTime;
            }
        }
    }
    table.splTable-list {
        @mixin create-card-table;
    }
    .eaiFilterControls .eaiResultsCount {
        float: none;
        line-height: $spacing;
        margin: 0;

        + .eaiFilterControl {
            margin-left: 0;
        }
    }
}
div.listWrapper {
    padding: 0 $spacing $spacing;
    table.splTable {
        background-color:$white;
    }
    .splPipe {
        margin:0px 2px;
    }
    td input {
        margin: 0px;
    }
}

.listIntroText {
    padding: 10px;
    &:empty {
        padding: 0;
        margin-bottom: -10px;
    }
}


/*************************************************************************************************/
/*  FILTER CONTROLS                                                                              */
/*************************************************************************************************/
.eaiFilterControls {
    margin-left: 0;
    padding: 0 $spacing;

    .eaiFilterControl {
        float: left;
        margin: $spacingQuarter;

        &:empty {
            display: none;
        }
        &.eaiSearchControl {
            > input[name=search] {
                border-top-right-radius: 0;
                border-bottom-right-radius: 0;
                height: 32px;
                box-sizing: border-box;
                &:focus {
                    z-index: 1;
                    position: relative;
                }
            }
            > input.searchButton {
                box-sizing: border-box;
            }
        }
        .eaiFilterControlLabel {
            margin: 0 $spacingQuarter 0 $spacingHalf;
            vertical-align: middle;
        }
        div&:first-of-type > .eaiFilterControlLabel {
            margin-left: 0;
        }
        input, select {
            margin: 0;
            width: auto;
            vertical-align: middle;
            max-width: 186px;
        }
        input {
            border: $borderDefault;
            &.checkbox, &.radio {
                width:auto;
                background-color: transparent;
                border: none;
            }
            &.eaiFilter {
                background: $white;
                width: 250px;
            }
        }
    }
    label {
        margin: 0 3px 0 20px;
        vertical-align: middle;
        text-shadow: none;
        font-weight: $fontWeight;
    }
    .appOnlyFilter {
        padding: 0;
        line-height: 30px;
        input {
            margin-left: 15px;
        }
        label {
            margin-left: 0px;
            margin-right: 0px;
        }
    }
}

/* override overrides for search button */
input.searchButton, .eaiFilterControls .eaiFilterControl input.searchButton {
    margin: 0 0 0 -$spacingQuarter;
    outline: 0;
    vertical-align: bottom;
}
.eaiFilterControls .eaiFilterControl input.searchButton {
    margin-top:-2px;
}

/** Firefox hack **/
@-moz-document url-prefix()
{
    .eaiFilterControls .eaiFilterControl {
        padding-top: 0px;
    }
}
.hasTabs .eaiFilterControls {
    background-color:$white;
    border-bottom:1px solid $borderColor;
    margin:0px 10px;
}

.appOnlyFilter {
    padding: 3px 10px;
    input {
        margin: 0px;
    }
}


/*************************************************************************************************/
/*  PAGINATION                                                                                   */
/*************************************************************************************************/
.eaiPagination {
    margin-bottom: 10px;
    padding: 10px 15px 0px;

    .adminContentList & {
        margin-bottom: 0;
    }

    .eaiPaginationHeader h2 {
        float: left;
        margin-right: 10px;
        margin-top: 2px;
    }
    div.actionButtons {
        float: left;
        margin: 10px 5px;
    }
    h2 {
        font-weight:bold;
        font-size: 18px;
        color: $brandColor;
        margin:0px;
    }
    p span {
        font-weight: bold;
    }
    .Paginator {
        padding-top: 5px;
    }
    select {
        margin-top: 0px;
    }
}

.eaiResultsPageControls {
    padding: 0px $spacing;

    .eaiResultsPageControl {
        float: none;
        line-height: 28px;

        .eaiResultsCount {
            float: left;
        }
        .ResultsContainer {
            float: right;
            min-height: $spacingHalf;
        }
    }
    .Paginator {
        display: block;
        .active a {
            margin-bottom: 10px;
        }
    }
    .eaiResultsPerPage {
        float: right;
        margin-right: 0px;
        margin-top: -2px;
    }
}
.eaiFilterControls {
    .eaiResultsPageControl {
        line-height: 30px;
    }
    .eaiResultsPerPage {
        float: right;

        select {
            margin-bottom: 0;
        }
    }
}
.eaiResultsPerPage {
    select {
        margin: 0 0 $spacingHalf;
        font-size: $fontSize;
        width: 70px;
    }
    label {
        font-size: $fontSize;
        margin-right: $spacingQuarter;
    }
}
.eaiResultsCount {
    float: left;
    font-size: $fontSize;
    margin: 0px;
}
.checkboxCell {
    width: 20px;
}


.bolt {
    width:auto;
    height:16px;
    padding-top: 3px;
    padding-left:9px;
    padding-right:2px;
}
.rssLink {
    width:12px;
    height:12px;
    background: url(/static/img/skins/default/xml.gif) no-repeat 0 50%;
    float:left;
}
.enabledCheck {
    width:6px;
    height:7px;
    background: url(/static/img/skins/default/check.gif) no-repeat 0 50%;
    float:left;
    margin-top:3px;
    margin-right:5px;
}

.enabledCheckNotPresentFiller {
    width:21px;
    height:7px;
    float:left;
}

/* styling for move dialog */
.moveObjectFormContainer {
    display:none;
    padding: $spacing;
}


/*************************************************************************************************/
/*  SHARED STYLES                                                                                */
/*************************************************************************************************/
.adminTitleStyle label {
    color:$brandColor;
    font-size: $fontSize;
    font-weight: $fontWeightSemiBold;
}

legend.hasHelpText {
    padding-bottom: $spacingHalf;
}
div.standaloneHelp p.helpText {
    display: block;
    margin: 0 0 5px 0;
}

.splTable h1 {
    margin: 0;
}


/*************************************************************************************************/
/*  EDIT FORM                                                                                    */
/*************************************************************************************************/
$editFormWidth: 940px;
$editFormLabelWidth: 250px;
$deleteButtonWidth: 100px;
$inputWidth: calc($editFormWidth - $editFormLabelWidth - 22px);
$inputWidthMedium: calc($inputWidth - $deleteButtonWidth);
$inputWidthHalf: calc($inputWidth / 2 - 58);
$shortInputWidth: 150px;

.entityEditForm {
    width: $editFormWidth;
    background: $white;
    margin: calc($spacing + $spacingHalf) auto;
    @mixin create-card;

    h1 {
        font-weight: $fontWeightSemiBold;
    }
    fieldset legend {
        margin: 0 0 $spacingHalf 0;
        width: 50%;
        padding: $spacingHalf $spacing;
        box-sizing: border-box;
        display: inline-block;
        color: $textColor;
        font-weight: bold;
        &.labelLegend {
            padding: $spacingHalf $spacing !important;
        }
        &.topLegendLabel {
            padding-top: $spacing !important;
        }
    }
    input[type=text], input[type=password], textarea.regular, .CodeMirror {
        width: $inputWidth;
        min-height: $inputHeight;
        box-sizing: border-box;
    }
    select.regular {
        width: $inputWidth;
    }
    input.short, select.short {
        width: $inputWidthHalf;
    }
    .fieldmapping input {
        width: $inputWidthHalf !important;
    }

    .fieldsetWrapper, fieldset {
        padding: 0;
        clear: both;
    }
    .fieldsetWrapper, .widget {
        + .fieldsetWrapper {
            margin-top: $spacingHalf;
        }
    }
    .formWrapper > div:first-of-type,
    #item-level:first-child {
        padding-top: $spacing;
    }

    /* Help text */
    .exampleText {
        margin: $spacingQuarter $spacingQuarter $spacingHalf 0;
    }
    .helpText {
        margin: $spacing 0 0 0;
    }
    .standaloneHelp p.helpText, .fieldsetHelpText {
        margin-left: $spacing;
        margin-right: $spacing;
    }

    /* Form Contents */
    .formWrapper {
        .widget {
            margin-bottom: $spacingQuarter;
            padding-right: $spacing;
            clear: both;

            > label, .orphanLabel {
                float: left;
                text-align: right;
                width: $editFormLabelWidth;
                padding: $spacingHalf $spacingThreeQuarters $spacingHalf $spacing;
                box-sizing: border-box;
                margin-right: 0;
                line-height: $lineHeight;
            }
            > div {
                margin-left: $editFormLabelWidth;
                margin-bottom: $spacingQuarter;

                .fieldmapping:first-child, .repeatabletemplate + .fieldmapping {
                    clear: none;
                }
            }
            &.checkboxWidget {
                br {
                    display: none;
                }
                .checkbox {
                    margin-top: $spacingQuarter;
                    margin-left: 0;
                    vertical-align: top;

                    + label {
                        display: inline-block;
                        width: calc(100% - 30px);
                        vertical-align: top;
                        margin-top: $spacingQuarter;
                        -webkit-margin-before: calc($spacingQuarter + 1px);
                    }
                }
                .orphanLabel {
                    margin-left: -$editFormLabelWidth;
                }
                &#item-createrole > div {
                    margin-left: $spacing;
                }
            }
            &.radioWidget {
                > div, .widgeterror {
                    padding-top: 9px;
                }
                input[type=radio] {
                    @mixin radio-button-overlay;
                }
            }
            &#item-imported_capabilities {
                label {
                    text-align: left;
                }
                > div {
                    clear: both;
                    margin-left: $spacing;
                    textarea {
                        resize: vertical;
                        height: 100px;
                        width: 900px;
                    }
                }
            }
            &#item-remotePassword {
                > label {
                    clear: left;
                }
            }
            &:last-child {
                margin-bottom: $spacingHalf;
            }
        }
        > .fieldsetWrapper:first-child,
        > input[type=hidden]:first-child + .fieldsetWrapper {
            > fieldset > legend:first-child {
                margin-bottom: 0;
                position: relative;
                top: -$spacingHalf;
            }
        }
        .accumulator {
            margin: $spacingHalf 0 $spacingHalf $spacing;
            .availableOptionsContainer, .selectedOptionsContainer {
                width: calc(($editFormWidth - ($spacing * 3)) / 2);
            }
            .selectedOptionsContainer {
                margin-right: 0;
            }
        }
        .multiColumnFieldset {
            div {
                float: none;
            }
            fieldset .widget.short {
                &#item-alert_suppress_period_value,
                &#item-spl-ctrl_stanza_prefix {
                    display: inline-block;
                    vertical-align: top;

                    &, > div {
                        padding-right: 0;
                        margin-right: 0;
                    }
                    & + .widget.short {
                        &#item-alert_suppress_period_unit,
                        &#item-stanza {
                            display: inline-block;
                            padding-right: 0;
                            vertical-align: top;

                            > label {
                                border: $border;
                                border-radius: $inputBorderRadiusLeft;
                                display: inline-block;
                                width: 103px;
                                margin: 4px -1px 0 10px;
                                padding: $buttonPadding;
                                text-align: left;
                                white-space: nowrap;
                                @mixin interactive;
                                box-shadow: none;

                                + div > input[type=text]{
                                    border-radius: $inputBorderRadiusRight;
                                }
                            }
                            > div {
                                margin-left: 0;
                                display: inline-block;
                            }
                        }
                    }
                }
            }
        }
        .fieldmapping > div,
        .repeatable .widget > div {
            margin-left: 0;
        }
        .repeatable {
            .widget {
                padding-right: 0;
            }
            input[type=text]{
                width: $inputWidthMedium;
            }
            > .exampleText {
                position: relative;
                top: -calc($spacing + $spacingQuarter);
                margin: 0 0 -$spacing $editFormLabelWidth;
            }
        }
        .standaloneHelp {
            padding-left: $spacingQuarter;
        }
    }
    .hasTabs & {
        padding: $spacing;
    }
    #permissions & {
        fieldset {
            > *:not(legend) {
                margin-left: $spacing;
            }
            > label {
                display: block;
                margin-bottom: $spacingHalf;
            }
            > .sharingRadios > input[type=radio]:not(:last-child) {
                margin-bottom: $spacingHalf;
            }
            > div > input[type=radio] {
                @mixin radio-button-overlay;
                margin-right: 6px;
            }
        }
    }
}
@-moz-document url-prefix() {
    .entityEditForm .formWrapper .widget.checkboxWidget .checkbox + label {
        margin-top: calc($spacingQuarter - 1px);
    }
}

.jmFormActions, .jmBatchActions {
    margin-top: $spacing;
    border-top: 1px solid $borderLightColor;
    padding: $spacing;
}
.jmFormOptions {
    padding: 0px $spacing;
}
.jmFormActions {
    min-height: 32px;
    padding: $spacing !important;
    text-align: right;
    overflow: hidden;

    .splButton-primary, .splButton-secondary {
        min-width: 100px;
        font-weight: $fontWeightSemiBold;
        margin-left: $spacingHalf;
        line-height: $lineHeight;
    }
}
.admin-dialog-tray {
    .splButton-primary, .splButton-secondary {
        min-width: 100px;
        font-weight: $fontWeightSemiBold;
        margin-left: $spacingHalf;
    }
}

.error-message {
    background-color: red;
